/**
*
* BreadCrumbs
*
**/
.breadcrumbs-active
    position relative
    background-image $bread-bg
    padding 5px 5px
    margin-right 25px
    color $bread-cl
    &:hover
        background-color $bread-bg-hv
        color $bread-cl-hv
    &:before
        content ''
        position absolute
        z-index 3
        top 50%
        margin-top -1.1em
        border-width 1.1em 0 1.1em 1.1em
        border-style solid 
        border-color $bread-brdr $bread-brdr $bread-brdr  transparent
        left -1.1em
    &:hover:before
        border-color $bread-bg-hv $bread-bg-hv $bread-bg-hv transparent
    &:after
        content ''
        position absolute
        z-index 3
        top 50%
        margin-top -1.1em
        border-top 1.1em solid transparent
        border-bottom 1.1em solid transparent
        border-left 1.1em solid $bread-brdr-aftr
        right -1.1em
    &:hover:after
        border-left-color $bread-bg-hv
